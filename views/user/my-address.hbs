<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<body>

    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container" id="address-show">
            {{#if addressDetails}}
            {{else}}
            <h5 class="mb-2">Select a delivery address</h5>
            {{/if}}

            <div class="row abc">
                {{#each existAddress}}
                {{#each address}}
                <div class="col-lg-3 coupon__link mr-3 shadow">
                    <h6 class="font-weight-bold">{{this.firstname}}</h6>

                    <h6>{{this.country}}</h6>
                    <h6>{{this.address1}},{{this.address2}},{{this.city}}</h6>
                    <h6>{{this.state}},{{this.zip}}</h6>
                    <h6>{{this.phoneNumber}}</h6>
                    <h6>{{this.email}}</h6>
                    <a href="/edit_address/{{this._id}}" class="btn mt-3 text-white "> Edit</a>

                    <a href="/delete-address_myAddress/{{this._id}}" class="btn mt-3 text-white ">Delete</a>
                </div>
                {{/each}}
                {{/each}}


            </div>
            {{#if addressDetails}}
            {{!-- address details start --}}
            <form action="/save_Edit_address/{{addressDetails.[0].address._id}}" method="post" class="checkout__form">
                <div class="row shadow">


                    <div class="col-lg-8 pb-3">
                        <h5>Add a new address</h5>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 ">
                                <div class="checkout__form__input ">
                                    <p>First Name <span>*</span></p>
                                    <input type="text" name="firstname" required value="{{addressDetails.[0].address.firstname}}">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Last Name <span>*</span></p>
                                    <input type="text" name="lastname" required value="{{addressDetails.[0].address.lastname}}">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Country <span>*</span></p>
                                    <input type="text" name="country" required value="{{addressDetails.[0].address.country}}">
                                </div>
                                <div class="checkout__form__input">
                                    <p>Address <span>*</span></p>
                                    <input type="text" name="address1" placeholder="Street Address" value="{{addressDetails.[0].address.address1}}" required>
                                    <input type="text" name="address2" value="{{addressDetails.[0].address.address2}}" required
                                        placeholder="Apartment. suite, unite ect ( optinal )">
                                </div>
                                <div class="checkout__form__input">
                                    <p>Town/City <span>*</span></p>
                                    <input type="text" name="city" value="{{addressDetails.[0].address.city}}" required>
                                </div>
                                <div class="checkout__form__input">
                                    <p>Area/Street <span>*</span></p>
                                    <input type="text" name="state" value="{{addressDetails.[0].address.state}}" required>
                                </div>
                                <div class="checkout__form__input">
                                    <p>Postcode/Zip <span>*</span></p>
                                    <input type="text" name="zip" value="{{addressDetails.[0].address.zip}}" required>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Phone <span>*</span></p>
                                    <input type="text" name="phoneNumber" value="{{addressDetails.[0].address.phoneNumber}}" required>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Email <span>*</span></p>
                                    <input type="text" name="email" value="{{addressDetails.[0].address.email}}"required>
                                </div>
                            </div>
                            <button type="submit" class="site-btn">Save Changes</button>

                        </div>
                    </div>
            </form>
            {{else}}
             <form action="#" class="checkout__form" id="save-address">
                <div class="row shadow">


                    <div class="col-lg-8 pb-3">
                        <h5>Add a new address</h5>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 ">
                                <div class="checkout__form__input ">
                                    <p>First Name <span>*</span></p>
                                    <input type="text" name="firstname" required>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Last Name <span>*</span></p>
                                    <input type="text" name="lastname" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Country <span>*</span></p>
                                    <input type="text" name="country" required>
                                </div>
                                <div class="checkout__form__input">
                                    <p>Address <span>*</span></p>
                                    <input type="text" name="address1" placeholder="Street Address" required>
                                    <input type="text" name="address2" required
                                        placeholder="Apartment. suite, unite ect ( optinal )">
                                </div>
                                <div class="checkout__form__input">
                                    <p>Town/City <span>*</span></p>
                                    <input type="text" name="city" required>
                                </div>
                                <div class="checkout__form__input">
                                    <p>Area/Street <span>*</span></p>
                                    <input type="text" name="state" required>
                                </div>
                                <div class="checkout__form__input">
                                    <p>Postcode/Zip <span>*</span></p>
                                    <input type="text" name="zip" required>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Phone <span>*</span></p>
                                    <input type="text" name="phoneNumber" required>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Email <span>*</span></p>
                                    <input type="text" name="email" required>
                                </div>
                            </div>
                            <button type="submit" class="site-btn">Save Address</button>

                        </div>
                    </div>
            </form>

            {{/if}}


        </div>

        </div>
    </section>
    <!-- Checkout Section End -->