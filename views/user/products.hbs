<!-- Shop Section Begin -->
<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="shop__sidebar">
                  
                   
                   
                    <div class="sidebar__color sidebar__filter">
                        <div class="section-title">
                            <h4>Shop by Brand</h4>
                        </div>
                         {{#each avlPro}}
                        <div class="size__list color__list">
                            <label for="black">
                                {{this.brand_name}}
                                <input type="checkbox" id="black" onclick="brandFilter('{{this.brand_name}}')">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                         {{/each}}
                           <a href="#">Filter</a>
                    </div>
                   


                </div>
            </div>
            <div class="col-lg-9 col-md-9">
                <div class="row">
                    {{#each avlPro}}
                    <div class="col-lg-4 col-md-6 " id="singleDiv">
                        <div class="product__item">
                            {{!-- {{#each data}} --}}
                            <div class="product__item__pic set-bg ">
                                <a href="/product-details/{{this._id}}"><img
                                        src="/productimages/{{this.productPictures.[0].filename}}" alt=""></a>

                                {{#if this.new}}
                                <div class="label new">New</div>
                                {{else if this.outOfStock}}
                                <div class="label stockout">out of stock</div>
                                {{else if this.sale}}
                                <div class="label sale">Best Seller</div>
                                {{/if}}
                                <ul class="product__hover">
                                    {{#if ../userLogIn}}

                                    <li><a href="/productimages/{{this.productPictures.[0].filename}}"
                                            class="image-popup"><span class="arrow_expand"></span></a></li>
                                    <li><a href="#"  onclick="addToWishlist('{{this._id}}')"><span class="icon_heart_alt"></span></a></li>
                                    <li><a href="#" onclick="addToCart('{{this._id}}')"><span
                                                class="icon_bag_alt"></span></a></li>
                                    {{else}}
                                    <li><a href="/productimages/{{this.productPictures.[0].filename}}"
                                            class="image-popup"><span class="arrow_expand"></span></a></li>
                                    <li><a href="#" onclick="addToWishlist('{{this._id}}')"><span class="icon_heart_alt"></span></a></li>
                                    <li><a href="/login"><span class="icon_bag_alt"></span></a></li>
                                    {{/if}}

                                </ul>
                             </div>


                            <div class="product__item__text">
                                <h6><a href="#">{{this.name}}</a></h6>
                                <div class="rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product__price">{{this.price}}</div>
                            </div>

                        </div>
                    </div>
                    {{/each}}

                   
                    <div class="col-lg-12 text-center">
                        <div class="pagination__option">
                            <a href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#"><i class="fa fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shop Section End -->