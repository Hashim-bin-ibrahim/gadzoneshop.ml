<script>


  var ctx = document.getElementById("myAreaChart").getContext('2d');
  var myAreaChart = new Chart(ctx, {

    type: 'bar',
    data: {
      labels: ['COD', 'Razorpay'],
      datasets: [{
        label: 'Payment methods',
        data: [{{ payment_Data }}],
      backgroundColor: [
        'rgba(52, 235, 219, 1)',
        'rgba(26, 36, 235, 1)',
        'rgba(227, 14, 78, 1)'
      ],
    }]
  },
    options: {
    responsive: true,
  },
    
    });



  let sale = ({{ sales }}/100)*100
  target = 100 - sale

  var ctx = document.getElementById("myAreaChart_two").getContext('2d');
  var myAreaChart = new Chart(ctx, {

    type: 'doughnut',
    data: {
      labels: ['sale', 'target'],
      datasets: [{
        label: 'Payment ',
        data: [sale, target],
        backgroundColor: [
          'rgba(52, 235, 219, 1)',
          'rgba(26, 36, 235, 1)',
          'rgba(227, 14, 78, 1)'
        ],
      }]
    },
    options: {
      responsive: true,
    },

  });


</script>