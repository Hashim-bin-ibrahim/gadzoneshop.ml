    <script>
jQuery.validator.addMethod("lettersonly", function (value, element) {
        return this.optional(element) || /^[a-z]+$/i.test(value);
    }, "Letters only please");

    $.validator.addMethod("noCaps", function (value, element) {
        return this.optional(element) || !/[A-Z]/.test(value);
    }, "email can't have upper case letters")


    $("#vendor_login").validate({
      errorClass: "valierrors",
  
      rules:{
        name:{
          required:true,
          minlength:3,
          lettersonly:true
        },
  
        email:{
          required:true,
          email:true,
          noCaps:true
        },
  
        phone:{
          required:true,
          minlength:10
        },
  
        password:{
          required:true,
          minlength: 5
        },
        con_password:{
            required:true,
            equalTo:'#password'
        }
      },
      messages:{
        con_password:{
          equalTo:"Passwords are not match"
        }
      }
    })
    </script>