{{!-- SHOW ALL CATEGORY LIST STARTS--}}
<div class="dash-container  mt-5 p-4">
  <h4 class="text-center mb-5">View all orders</h4>
  <section>

    <div class="container shadow p-2">

      <table class="table" id="vendors_table">




        <thead>
          <tr style="align-items: center;">
            <th>Sl No</th>
         
            <th>image</th>
            <th>Product</th>
           
            <th>Item Price</th>
            <th>Payment-Type</th>
            <th>Quantity</th>
            <th>Status</th>
            
            <th>View</th>
          
          </tr>
        </thead>

        <tbody>
          {{#each orderedPro}}
          <tr>

            <td>{{inc @index}}</td>
             <td>
                                    <img style="width: 100px; height:auto;" src="/productimages/{{this.productLookup.productPictures.[0].filename}}"
                                        class="img-fluid" alt="Phone">
                                </td>
            <td> {{this.productLookup.name}}</td>
            <td> {{this.productLookup.price}}</td>
             <td> {{this.paymentType}}</td>

            <td> {{this.products.quantity}}</td>
            <td> {{this.products.orderStatus}}</td>
            
            <td>
              <a href="/vendor/ordered_pro_details?orderId={{this._id}}&productId={{this.products.product}}" class="btn btn-danger">View-Details</a>
            </td>
          </tr>

          {{/each}}

        </tbody>
      </table>
    </div>
  </section>
</div>





<script>
  $(document).ready(function () {


    $('#user_table').wrap('<div id="hide" style="display:none"/>');

    $('#hide').css('display', 'block');
  });


  var table = $('#vendors_table').DataTable();
</script>